# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
ij_html_quote_style = double # Makes IntelliJ software use double quotes for HTML attributes
ij_html_keep_whitespaces = true # Makes IntelliJ software keep whitespaces in HTML files

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
